@import url("../components/c-button/c-button.selectors.postcss");
@import url("../components/c-card/c-card.selectors.postcss");
@import url("../tools/selectors.postcss");
@import url("../tools/x-link.postcss");

a:where(:not(:--c-button, :--c-card)) {
  @mixin link;
}
a:where(:not([href])) {
  @mixin link--disabled;
}
a:where(:not(:--c-button, :--c-card)):hover {
  @mixin link--hover;
}
a:where(:not(:--c-button, :--c-card)):active {
  @mixin link--active;
}
