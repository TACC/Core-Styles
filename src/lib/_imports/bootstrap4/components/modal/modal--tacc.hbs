{{!-- XXX: Almost identical to modal.hbs, but using TACC buttons --}}
<button id="open-modal-button"
        type="button"
        {{!-- HACK: To support TACC .c-button until TACC skins Bootstrap .btn --}}
        class="c-button c-button--primary"
        data-toggle="modal"
        data-target="#static-modal">
  Open Modal
</button>

<div id="static-modal"
     class="modal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="static-modal-title">
  <div class="modal-dialog modal-dialog-scrollable"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"
            id="static-modal-title">Modal Title</h5>
        <button type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{> @loremipsum-paragraphs }}
      </div>
      <div class="modal-footer">
        <button type="button"
                {{!-- HACK: To support TACC .c-button until TACC skins Bootstrap .btn --}}
                class="c-button c-button--secondary"
                data-dismiss="modal">
          Another Action
        </button>
        <button type="button"
                {{!-- HACK: To support TACC .c-button until TACC skins Bootstrap .btn --}}
                class="c-button c-button--primary">
          Main Action
        </button>
      </div>
    </div>
  </div>
</div>
