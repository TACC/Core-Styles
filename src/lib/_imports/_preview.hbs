{{! To ensure HTML comments that follow are within the head, not before it }}
{{! FAQ: Any <link>s, and comments AFTER the first, are migrated to <head> }}
<link rel='author' href='https://github.com/TACC/Core-Styles' />



<!-- Styles: Layers -->
{{!-- https://confluence.tacc.utexas.edu/x/b53tDg --}}
<style>
@layer foundation, base, project, cosmetic;
@layer foundation.external, foundation.internal;
</style>

<!-- Styles: Global (for every component) -->
<style>
{{#each styles.external.global}}
@import url('{{this}}') layer(foundation.external);
{{/each}}
{{#each styles.internal.global}}
@import url('{{path this}}') layer(foundation.internal);
{{/each}}
</style>

<!-- Styles: Base (for current component) -->
<style>
/* Supporting Components {{#unless _target.context.supportStyles}} (none) {{/unless}}*/
{{#each _target.context.supportStyles}}
@import url('{{path this}}') layer(base);
{{/each}}

/* Current Component {{#if styles.shouldSkipBase}} (skipped) {{else}}*/
@import url('{{path "/assets/{{ _target.context.subdir }}/{{ _target.baseHandle }}.css"}}') layer(base);
{{/if}}
</style>

<!-- Styles: Demo (for current component) -->
<style>
{{#each _target.resources.assets}}
{{#if isCSS}}
@import url('{{path "/components/raw/{{ _target.baseHandle }}/{{ this.base }}"}}') layer(project);
{{/if}}
{{/each}}
</style>



<!-- Styles: Demo (for every component) -->
{{> @css }}



<!-- Scripts: Local (for current component) -->
{{#each _target.resources.assets}}
{{#if isJS}}
<script
  src='{{path "/components/raw/{{ _target.baseHandle }}/{{ this.base }}"}}'
></script>
{{/if}}
{{/each}}



<!-- Markup (for current component) -->
{{{yield}}}
