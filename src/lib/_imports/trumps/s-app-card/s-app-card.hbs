<div class="s-image-grid">
  {{#each data}}
    {{#if can-wrap-in-a-link}}
    <a href="#" class="app-card">
    {{else}}
    <div class="app-card">
    {{/if}}
      <h3>
        {{#if icon}}<i class="icon icon-user"></i>{{/if}}
        {{!-- These custom icons are not available in Cortal yet --}}
        {{!-- {{#if icon}}<i class="icon icon-{{icon}}"></i>{{/if}} --}}
        {{title}}
      </h3>
      <p>{{desc}}</p>
      <ul>
        {{#each feats}}
        <li>{{this}}</li>
        {{else}}
        <li>&nbsp;</li>
        {{/each}}
      </ul>
      <ul>
      {{#each tags}}
        <li>
        {{#if (eq this "Popular")}}<strong>{{this}}</strong>
        {{else}}{{this}}
        {{/if}}
        </li>
      {{/each}}
      </ul>
      {{#unless can-wrap-in-a-link}}
        <a href="#">magic link</a>
      {{/unless}}
    {{#if can-wrap-in-a-link}}
    </a>
    {{else}}
    </div>
    {{/if}}
  {{/each}}
</div>
