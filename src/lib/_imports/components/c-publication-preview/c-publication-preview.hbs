<style>
  @import url('{{ path "/components/c-tag-list.css" }}');
</style>

{{#each items}}
  <article class="c-publication-preview">
    {{#if tags}}
      <ul class="c-tag-list c-tag-list--auto-text">
      {{#each tags}}
        <li><a href="#">{{this}}</a></li>
      {{/each}}
      </ul>
    {{/if}}
    <h3>
      {{#if url}}
        <a href="{{url}}">{{title}}</a>
      {{else}}
        {{title}}
      {{/if}}
    </h3>
    <p><strong>Authors:</strong> {{citation}}</p>
    <p>{{status}}</p>
  </article>
{{/each}}
