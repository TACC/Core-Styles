{{#if variant}}

<article class="c-card c-card--standard-{{variant}}">
  <h3>Card - Standard {{variant}}</h3>
  <p>This is a prorotype variant. <span class="c-message--scope-inline c-message--type-warning">If <code>c-card--standard</code> automatic variation proves adequate, this explicit variant is removed.</span></p>
</article>

{{else}}

<article class="c-card c-card--standard">
  <h3>Card - Standard</h3>
  <p>{{> @text-of-one-paragraph-short }}</p>
</article>

{{/if}}
