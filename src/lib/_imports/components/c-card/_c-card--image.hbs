{{#if card-link}}
<a class="c-card c-card--{{variant}} c-card--image-{{position}}" href="{{card-link}}">
{{else}}
<article class="c-card c-card--{{variant}} c-card--image-{{position}}">
{{/if}}

{{#if is-staff}}

  <h4>
    {{#if image-link}}
    <a href="{{image-link}}">Bender Rodríguez</a>
    {{else}}
    Bender Rodríguez
    {{/if}}
  </h4>
  <p>Planet Express Worker</p>
  <p>(Anti-hero in Futurama)</p>
  <ul>
    <li>
    {{#if card-link}}
    <strong>Card <em>IS</em> a link</strong>
    {{else}}
    <strong>Card is <em>NOT</em> a link</strong>
    {{/if}}
    </li>
    <li>
    {{#if image-link}}
    <strong>Image <em>IS</em> a link</strong>
    {{else}}
    <strong>Image is <em>NOT</em> a link</strong>
    {{/if}}
    </li>
  </ul>
  {{#if image-link}}
  <a href="{{image-link}}">
    <img class="img-fluid" width="234px" height="293px"
      src="https://cohro.ukzn.ac.za/wp-content/uploads/2019/02/profile-placeholder.png"
      title="University of Texas at Austin" class="img-fluid"
    />
  </a>
  {{else}}
  <img class="img-fluid" width="234px" height="293px"
    src="https://cohro.ukzn.ac.za/wp-content/uploads/2019/02/profile-placeholder.png"
    title="University of Texas at Austin" class="img-fluid"
  />
  {{/if}}

{{else}}

  <h3 id="card-image-{{position}}">Card - Image {{position}}</h3>
  <p>{{> @text-of-one-paragraph-short }}</p>
  {{#if tall}}
  {{> @message tag="p" type="warning" scope="inline" content="Narrow images might not fill space available. Just use a wider image." }}
  {{/if}}
  {{#if image-link}}
  <a href="{{image-link}}">
    <img src="{{> @img-url wide=wide tall=tall medium=true }}" />
  </a>
  {{else}}
  <img src="{{> @img-url wide=wide tall=tall medium=true }}" />
  {{/if}}
{{/if}}

{{#if card-link}}
</a>
{{else}}
</article>
{{/if}}
